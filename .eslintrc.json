{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        //"standard-with-typescript"
    ],
    "ignorePatterns": "**/*.js",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-var-requires": 2
    }
}